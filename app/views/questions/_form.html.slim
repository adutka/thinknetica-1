= nested_form_for @question do |f|
  =f.label :title
  =f.text_field :title

  =f.label :body
  =f.text_area :body

  p Attachments:
  / p
    / - @question.attachments.each do |a|
    /   -if a.file
    /     li= link_to a.file.identifier, a.file.url
    /     =f.link_to_remove "Remove this attachment"
  p
    =f.fields_for :attachments do |a|
      =a.label :file
      =a.file_field :file
      =a.link_to_remove "Remove this attachment"
    =f.link_to_add "Add an attachment", :attachments
  =f.submit 'Create'