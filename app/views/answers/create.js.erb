<% if @message %>
  $('.notice').html('<%= @message %>');
<% end %>
<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
  $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
if ($('.answers').size() != 0){
  $('.answers').html('<%= j render @question.answers %>');
  $('.answer-errors').html('');
  $(' #answer_body').val(''); // clear body in answer template
} else {
  $(location).attr('href', "<%= question_url(@question) %>");
}
<% end %>